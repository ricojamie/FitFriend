<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ExerciseList">
    <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:singleLine="false"
            android:layout_margin="5dp"
            android:id="@+id/chipGroup" app:singleSelection="true" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/chestChip"
                android:text="Chest"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center"
                android:checked="false"
        />
        <com.google.android.material.chip.Chip
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/backChip"
                android:text="Back"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center"/>
        <com.google.android.material.chip.Chip
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/bicepsChip"
                android:text="Biceps"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" android:textAlignment="center"/>
        <com.google.android.material.chip.Chip
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/legsChip"
                android:text="Legs"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center"/>
        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tricepsChip"
                android:text="Triceps"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center"/>
        <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shouldersChip"
                android:text="Shoulders"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textAlignment="center"/>
    </com.google.android.material.chip.ChipGroup>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="377dp"
            android:layout_height="0dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/chipGroup"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/exercisesRecyclerView"
            android:scrollbars="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>